# Information Retrieval System - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME="Information Retrieval by Smaran"
APP_VERSION="1.0.0"
ENVIRONMENT="production"

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=sqlite:///./publications.db

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-please-change-this-in-production

# CORS Settings (for API access from different domains)
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Rate Limiting
RATE_LIMIT_SEARCH=10/minute
RATE_LIMIT_CLASSIFY=20/minute

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
ENABLE_COMPRESSION=true